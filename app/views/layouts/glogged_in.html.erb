<!DOCTYPE html>
<html>
  <head>
    <title>Lab4Assignment</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar">

        <button><%= link_to User.find(session["warden.user.user.key"][0][0]).name, "http://localhost:3000/users/"+ User.find(session["warden.user.user.key"][0][0]).id.to_s %></button>
        <button><%= link_to "Log Out", log_out_path, method: :delete %></button>

        <button><%= link_to "Places", "http://localhost:3000/places"%></button>
        <button><%= link_to "Events", "http://localhost:3000/events"%></button>
        <button><%= link_to "Ticket", "http://localhost:3000/tickets"%></button>
        <button><%= link_to "User Ticket", "http://localhost:3000/user_tickets"%></button>
        <button><%= link_to "Shopping Bag", "http://localhost:3000/user_tickets/index_shopping_bag"%></button>
        <% user = User.find(session["warden.user.user.key"][0][0]) %>
        <% a = Ability.new(user) %>
        <% if a.can? :manage, User%>
          <button><%= link_to "Users", "http://localhost:3000/users"%></button>
        <% end %>
    </nav>
  	<p id="notice"><%= notice %></p>
    <%= yield %>

    
  </body>
</html>