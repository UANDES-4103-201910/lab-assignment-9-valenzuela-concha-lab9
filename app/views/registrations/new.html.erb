 
<%= form_for(:registrations, url: 'http://localhost:3000/users/sign_up') do |f| %>
	<div class="form-group">
	    <%= f.label :name, "Name" %>
	    <%= f.text_field :name %>
	</div>
	<div class="form-group">
	    <%= f.label :last_name, "Last Name" %>
	    <%= f.text_field :last_name %>
	</div>
	<div class="form-group">
	    <%= f.label :email %>
	    <%= f.text_field :email %>
	</div>
	<div class="form-group">
      <%= f.label :phone %>
      <%= f.text_field :phone %>
  	</div>
	<div class="form-group">
	    <%= f.label :password, "Password" %>
	    <% if @minimum_password_length %>
	        <em>(<%= @minimum_password_length %> caracteres m√≠nimo)</em>
	    <% end %><br/>
	    <%= f.password_field :password, autocomplete: "off" %>
	</div>
	<div class="actions">
	    <%= f.submit "Sign up" %>
	</div>
<% end %>
